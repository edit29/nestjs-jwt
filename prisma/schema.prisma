model Lead {
  id         Int      @id @default(autoincrement())
  bitrixId   Int      @unique
  title      String
  status     String?
  phone      String?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

model Product {
  id String @id @default(uuid()) 
  articleNumber String @unique

  name String
  year String?
  price Int @default(0)
  description String?

  in_stock Int @default(0)
  bestseller Boolean @default(false)
  isAvailable Boolean @default(false) @map("is_available")

  tag String @default("UNTYPE")

  poster ProductPoster? @relation(fields: [posterId], references: [id])
  posterId String? @unique @map("poster_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  
  @@map("products")
}

model ProductPoster {
  id String @id @default(uuid())

  url String? 

  product Product? @relation

  // product ShopCart?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("product_poster")
}

model Order {
  id        String     @id @default(uuid())
  userId    String
  total     Float
  currency  String    @default("RUB")
  status    String    @default("created") // created, paid, shipped, canceled
  items     OrderItem[]
  payment   Payment?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int
}

model Payment {
  id                 String  @id @default(uuid())
  order              Order   @relation(fields: [orderId], references: [id])
  orderId            String  @unique
  provider           String
  providerPaymentId  String
  amount             Float
  status             String  // pending, succeeded, failed
  createdAt          DateTime @default(now())
}

model PhoneVerification {
  id        String   @id @default(uuid())
  phone     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Optional registration/login payload
  email     String?
  name      String?
  password  String?

  @@map("phone_verifications")
}

enum UserRole {
  USER
  ADMIN
}
